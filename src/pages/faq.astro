---
import Layout from '../layouts/Layout.astro';
import Buttons from '../components/Buttons.astro';

const faqs = [
  {
    question: 'كم تستغرق مدة الوصول للموقع؟',
    answer: 'نصل إلى موقعك في غضون 15-30 دقيقة في معظم مناطق جدة، اعتماداً على موقعك وحالة المرور.'
  },
  {
    question: 'هل تعملون 24 ساعة؟',
    answer: 'نعم، نحن نعمل على مدار 24 ساعة طوال أيام الأسبوع، بما في ذلك العطل والمناسبات.'
  },
  {
    question: 'ما هي طرق الدفع المقبولة؟',
    answer: 'نقبل الدفع النقدي وبطاقات مدى وجميع البطاقات الائتمانية وكذلك التحويل البنكي.'
  },
  {
    question: 'هل تقدمون خدمات خارج جدة؟',
    answer: 'نعم، نقدم خدمات السحب خارج جدة بأسعار تنافسية تعتمد على المسافة.'
  },
  {
    question: 'هل لديكم تأمين على الخدمات؟',
    answer: 'نعم، جميع خدماتنا مؤمنة بالكامل لضمان سلامة سيارتك.'
  },
  {
    question: 'كيف يتم تحديد سعر الخدمة؟',
    answer: 'يعتمد السعر على نوع الخدمة والمسافة ونوع السيارة. نقدم تسعيرة مجانية قبل بدء الخدمة.'
  },
  {
    question: 'هل تقدمون خدمة فتح جميع أنواع السيارات؟',
    answer: 'نعم، لدينا خبرة في فتح جميع أنواع السيارات بطريقة آمنة واحترافية.'
  },
  {
    question: 'ما هي المستندات المطلوبة لتقدير السيارة؟',
    answer: 'تحتاج إلى استمارة السيارة وإثبات الملكية وبطاقة الهوية.'
  }
];
---

<Layout
  title="الأسئلة الشائعة | سطحة وسط جدة"
  description="إجابات على الأسئلة الشائعة حول خدمات السطحة في جدة. تعرف على كل ما تريد معرفته عن خدماتنا وأسعارنا وطريقة العمل."
>
  <main class="py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center mb-12">الأسئلة الشائعة</h1>

      <div class="max-w-4xl mx-auto">
        <div class="space-y-6">
          {faqs.map(faq => (
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <div class="p-6">
                <h2 class="text-xl font-bold mb-3">{faq.question}</h2>
                <p class="text-gray-600">{faq.answer}</p>
              </div>
            </div>
          ))}
        </div>

        <div class="mt-12 p-6 bg-blue-50 rounded-lg text-center">
          <h3 class="text-xl font-bold mb-4">هل لديك سؤال آخر؟</h3>
          <p class="mb-6">نحن هنا للإجابة على جميع استفساراتك</p>
          <Buttons />
        </div>
      </div>
    </div>
  </main>
</Layout>